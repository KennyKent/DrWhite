<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_choose_players_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_layout_background_yellow"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_choose_players_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_choose_players_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffcc41"
            app:srcCompat="@drawable/ic_player_alien" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>